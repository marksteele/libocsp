%define debug_package %{nil}

%description
Small client for sending OCSP requests

%package devel
Group: Development/Libraries
Requires: %{name} = %{version}-%{release}, gnutls-devel, libcurl-devel
Summary: Files needed for building applications with libocsp.

%description devel
libocsp is a library to send OCSP requests.

%prep
%setup -q -n %{_tarname_base}

%build
autoreconf --install
libtoolize --force
automake --add-missing

%configure

make

%install
rm -rf %{buildroot}

%makeinstall
rm %{buildroot}%{_libdir}/libocsp.la

%post
/sbin/ldconfig

%postun
/sbin/ldconfig

%files
%defattr(-,root,root)
